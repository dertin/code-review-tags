{
  "manifest_version": 3,
  "name": "Conventional Comments Helper",
  "version": "1.0.0",
  "description": "Make reviews clearer with Conventional Comments labels on bitbucket.org; GitHub and GitLab support coming soon.",
  "icons": { 
    "48": "icons/icon-48.png", 
    "96": "icons/icon-96.png" 
  },
  "permissions": ["storage"],
  "action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Conventional Comments",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://bitbucket.org/*/pull-requests/*"],
      "js": ["content_script.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": { "page": "options.html", "open_in_tab": false },
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "109.0"
    }
  }
}